{
    "author": "Rafael Prenholato <rprenhol@gmail.com>",
    "description": "Utilit√°rios para OTRS",
    "manifest_version": 2,
    "name": "OTRS",
    "homepage_url": "https://github.com/rprenhol/otrs",
    "version": "2.3",
    "icons": {
        "48": "icon/48.png",
        "92": "icon/92.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "clipboardWrite",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "icon/*"
    ],
    "options_ui": {
        "page": "option.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "otrs.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "16": "icon/16.png",
            "32": "icon/32.png"
        }
    }
}